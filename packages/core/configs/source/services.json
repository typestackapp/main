{
    "ACTIVE": {
        "start": {
            "dev": [
                {"template": "pm2_dev", "service": "next_dev", "name": "NEXT" },
                {"template": "pm2_dev", "service": "express_dev", "name": "EXPRESS" },
                {"template": "pm2_dev", "service": "jobs_dev", "name": "JOBS" }, 
                {"template": "pm2_dev", "service": "graphql_dev", "name": "GRAPHQL" },
                {"template": "pm2_dev", "service": "consumers_dev", "name": "CONSUMER-TSAPP", "e": {"RCS": "tsapp"} }
            ],
            "prod": [
                {"template": "pm2_prod", "service": "next_prod", "name": "NEXT" },
                {"template": "pm2_prod", "service": "express_prod", "name": "EXPRESS" },
                {"template": "pm2_prod", "service": "jobs_prod", "name": "JOBS" }, 
                {"template": "pm2_prod", "service": "graphql_prod", "name": "GRAPHQL" },
                {"template": "pm2_prod", "service": "consumers_prod", "name": "CONSUMER-TSAPP", "e": {"RCS": "tsapp"} }
            ]
        },
        "templates": {
            "pm2_dev": "pm2 start --exp-backoff-restart-delay=100 --time --name ${name} -e /tsapp/node_modules/@typestackapp/core/logs/tsapp/${name}.error.log -o /tsapp/node_modules/@typestackapp/core/logs/tsapp/${name}.log ${script} -- --delay 1.0 ${args}",
            "pm2_prod": "pm2 start --exp-backoff-restart-delay=100 --time --name ${name} -e /tsapp/node_modules/@typestackapp/core/logs/tsapp/${name}.error.log -o /tsapp/node_modules/@typestackapp/core/logs/tsapp/${name}.log ${script} -- ${args}"
        },
        "services": {
            "next_dev": {
                "script": "nodemon",
                "args": "-e js --exec 'node ./packages/core/common/services/next.js' -w ./packages/core/common/services/next.js"
            },
            "next_prod": {
                "script": "node",
                "args": "./packages/core/common/services/next.js"
            },
            "express_dev": {
                "script": "nodemon",
                "args": "-e ts,json --exec 'node ./packages/core/common/services/express.js' -w ./packages/core/common/services/express.js -w './packages/**/express/' -w './packages/cli/config/' -w './packages/**/common/' -w './packages/**/models/'"
            },
            "express_prod": {
                "script": "node",
                "args": "./packages/core/common/services/express.js"
            },
            "jobs_dev": {
                "script": "nodemon",
                "args": "-e ts,json --exec 'node ./packages/core/common/services/jobs.js' -w ./packages/core/common/services/jobs.js -w './packages/cli/config/' -w './packages/**/common/' -w './packages/**/models/'"
            },
            "jobs_prod": {
                "script": "node",
                "args": "./packages/core/common/services/jobs.js"
            },
            "graphql_dev": {
                "script": "nodemon",
                "args": "-e ts,json --exec 'node ./packages/core/common/services/graphql.js' -w ./packages/core/common/services/graphql.js -w './packages/**/graphql/' -w './packages/cli/config/' -w './packages/**/common/' -w './packages/**/models/'"
            },
            "graphql_prod": {
                "script": "node",
                "args": "./packages/core/common/services/graphql.js"
            },
            "consumers_dev": {
                "script": "nodemon",
                "args": "-e ts,json --exec 'node ./packages/core/common/services/consumers.js' -w ./packages/core/common/services/consumers.js -w './packages/**/consumers/' -w './packages/cli/config/' -w './packages/**/common/' -w './packages/**/models/'"
            },
            "consumers_prod": {
                "script": "node",
                "args": "./packages/core/common/services/consumers.js"
            }
        }
    }
}